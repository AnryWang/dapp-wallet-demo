<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.lhalcyon.dapp"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.Main"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.InitWalletActivity"/>

        <activity
            android:name=".ui.CreateWalletActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>

        <activity android:name=".ui.CreateWalletResultActivity"/>

        <activity android:name=".ui.unlock.UnlockWalletActivity"
                  android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>
    </application>

</manifest>